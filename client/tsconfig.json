{
  "compilerOptions": {
    "jsx": "preserve",
    "target": "es5",
    "module": "esnext",
    "strict": true,
    "types": [],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "experimentalDecorators": true
  },
  "include": [
    "src", 
    "types/react-medium-editor.d.ts",
    "types/react-identicons.d.ts"
  ]
}
